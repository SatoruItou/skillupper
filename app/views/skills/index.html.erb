<div class="wrapper">

  <div class="header">
    <h1>Skill Upper/ サイドバーのページ選択で変化</h1>
  </div>

  <div class="container">
    <div class="side_bar">
      <div class="menu">
        <ul>
          <li>menu</li>
        </ul>

        <ul>
          <% if user_signed_in? %>
            <li><%= link_to current_user.nickname, "/users/#{current_user.id}", class: "user-nickname" %>さん /<%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
          <% else %>
            <li><%= link_to "ログイン", new_user_session_path, class: "login" %></li>
            <li><%= link_to '新規登録', new_user_registration_path, class: "sign_up" %> </li>
          <% end %>
        </ul>
        <ul>
          <li>スキル一覧</li>
          <li>バディ検索</li>
          <li>バディチャット</li>
        </ul>
      </div>
    </div>
    <div class="content">
      <%= link_to "スキルを追加する",   new_skill_path, class:"skill" %>

      <% @skills.each do |skill| %>
          
      <li class='list'>
  
        <div class='skill-img-content'>
          <%= image_tag(skill.image, class: "skill-img") %>
        </div>
        <div class='skill-info'>
          <h1 class='skill-name'>
            <%= skill.name %>
          </h1>
          <h3 class=>
          <div class='skill-level'>
            <span><%= skill.level %>Level</span>
          </div>
        </div>
        <div class='skill-menu'>
            <%= link_to "経験値の追加", new_skill_sum_exp_path(skill.id), class:"sum_exp-btn" %> 
          </div>
      </li>
      <% end %>

    </div>
  </div>

</div>
