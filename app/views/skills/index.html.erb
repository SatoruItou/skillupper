<%= render "shared/header" %>
<div class="wrapper">


  <div class="container">
    <div class="side_bar">
      <div class="menu">
        <ul>
          <li>menu</li>
        </ul>

       
        <ul>
          <li>スキル一覧</li>
          <li>バディ検索</li>
          <li>バディチャット</li>
        </ul>
      </div>
    </div>
    <div class="content">
      <%= link_to "スキルを追加する",   new_skill_path, class:"skill" %>

   
      <li class='list'>
         <% @skills.each do |skill| %>
         <%= skill.user.nickname %>
          <%= link_to skill_path(skill.id) do %>
            <div class='skill-img-content'>
             <%= image_tag(skill.image, class: "skill-img") %>
            </div>
            <div class='skill-info'>
            <h1 class='skill-name'>
              <%= skill.name %>
             </h1>
          <% end %>
      
      <h2 class='skill-total-time'>
      学習時間
          <%= skill.total_minute %>
          分
          </h2>
         
        <div class='skill-menu'>
            <%= link_to "経験値の追加", new_skill_sum_exp_path(skill.id), class:"sum_exp-btn" %> 
          </div>
      </li>
      <% end %>

    </div>
  </div>

</div>
